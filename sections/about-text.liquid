{%- assign title = section.settings.title -%}

<div data-section-id="{{ section.id }}">
  <div class="container text-block mb-16">
    <div class="flex flex-wrap justify-center text-center">
      <div class="w-full lg:w-7/12">
        <h2>{{ title }}</h2>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Text",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    }
  ]
}
{% endschema %}