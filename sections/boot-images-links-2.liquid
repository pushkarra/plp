<section>
  <div class="container">
    <div class="flex flex-wrap justify-center md:-mx-4">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- assign image = block.settings.image -%}
          {%- assign link = block.settings.link -%}

          <div class="w-full md:w-1/2 pb-4 md:px-4">
            <a href="{{ link }}" title="Boot image">
              <img src="{{ image | img_url: 'master' }}" alt="">
            </a>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Images and Links 2",
  "max_blocks": 4,
  "settings": [
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Images and Links 2",
      "category": "Image"
    }
  ]
}
{% endschema %}