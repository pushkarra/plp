<div data-section-id="{{ section.id }}">
  <section id="best-price-header" class="gray text-center px-10">
    <div class="container">
      <div class="flex flex-wrap">
        <div class="w-full">
          <h1>{{ section.settings.title }}</h1>
        </div>
      </div>
    </div>
  </section>

  <section id="best-price-content" class="container min pt-20 pb-16">
    <div class="flex flex-wrap">
      <div class="w-full">
        {{ page.content }}
      </div>
    </div>
  </section>
</div>

{% schema %}
{
  "name": "Content",
  "settings": [
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ]
}
{% endschema %}