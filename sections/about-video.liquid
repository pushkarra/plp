{%- assign image = section.settings.image -%}
{%- assign title = section.settings.title -%}
{%- assign text = section.settings.text -%}
{%- assign video_link = section.settings.video_link -%}

<div data-section-id="{{ section.id }}">
  {% if image != blank %}
  <div class="container video-block mb-16">
    <div class="flex flex-wrap">
      <div class="w-full">
        <img src="{{ image | img_url: 'master' }}" alt="">

        <div class="video-block__text text-center lg:text-left pt-6 lg:pt-0">
          <h2>{{ title }}</h2>
          {{ text }}
        </div>

        {% if video_link != blank %}
          <a href="{{ video_link }}" class="video-block__play mfp-iframe">{% include 'icon' with 'play' %}</a>
        {% endif %}
      </div>
    </div>
  </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "video_link",
      "label": "Video Link"
    }
  ]
}
{% endschema %}