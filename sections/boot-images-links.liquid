<section class="boot-images-links">
  <div class="container">
    <div class="flex flex-wrap justify-center text-center md:-mx-4">
      {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}
      {%- assign image = block.settings.image -%}
      {%- assign title = block.settings.title -%}
      {%- assign link = block.settings.link -%}

      <div class="w-full sm:w-1/2 md:w-4/12 pb-4 md:px-4">
        <a href="{{ link }}" class="inline-block text-center">
          <img src="{{ image | img_url: 'master' }}" alt="">
          <p>{{ title }}</p>
        </a>
      </div>
      {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Images and Links",
  "max_blocks": 6,
  "settings": [
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Images and Links",
      "category": "Image"
    }
  ]
}
{% endschema %}