<section data-section-id="{{ section.id }}">
  <div class="container returns-exchanges-info pt-16">
    <div class="flex pb-10">
      <div class="w-full text-center">
        <h6>{{ section.settings.title_small }}</h6>
        <h2>{{ section.settings.title }}</h2>
      </div>
    </div>

    {%- if section.blocks.size > 0 -%}
    <div class="flex flex-wrap">
      {%- for block in section.blocks -%}
        {%- assign icon = block.settings.icon -%}
        {%- assign title = block.settings.title -%}
        {%- assign text = block.settings.text -%}

        <div class="w-full lg:w-1/3 returns-exchanges-info__element pb-10 lg:pr-32">
          <img src="{{ icon | img_url: 'master' }}" alt="">
          <small class="inline-block">Step {{ forloop.index }}</small>
          <h3>{{ title }}</h3>
          <div>{{ text }}</div>
        </div>
      {%- endfor -%}
    </div>
    {%- endif -%}

    {%- assign note_text = section.settings.note_text -%}
    {%- if note_text != blank -%}
    <div class="flex returns-exchanges-info__note">
      <div class="w-full">
        <small>Please note</small>
        {{ note_text }}
      </div>
    </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Info",
  "settings": [
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "text",
      "id": "title_small",
      "label": "Title (Small)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "header",
      "content": "Note"
    },
    {
      "type": "richtext",
      "id": "note_text",
      "label": "Text"
    }
  ],
  "blocks": [
    {
    "type": "text",
    "name": "Text",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}