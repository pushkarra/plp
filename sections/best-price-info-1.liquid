<section data-section-id="{{ section.id }}">
  <div id="best-price-info-1" class="container best-price-info py-16">
    {%- if section.blocks.size > 0 -%}
    <div class="flex flex-wrap lg:-mx-2">
      {%- for block in section.blocks -%}
      {%- assign title_small = block.settings.title_small -%}
        {%- assign title = block.settings.title -%}
        {%- assign text = block.settings.text -%}
        {%- assign image = block.settings.image -%}

        <div class="w-full lg:w-1/3 best-price-info__element pb-10 lg:px-2">
          <small>{{ title_small }}</small>
          <h3>{{ title }}</h3>
          <div>{{ text }}</div>
          <img src="{{ image | img_url: '460x460' }}" alt="">
        </div>
      {%- endfor -%}
    </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Info",
  "settings": [
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title_small",
          "label": "Title (Small)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (460x460)"
        }
      ]
    }
  ]
}
{% endschema %}