/*============================================================================
  Variables
==============================================================================*/
$color-primary: #c4996c;
$color-secondary: #d33a3e;
$color-body-bg: #fff;
$color-bg-1: #f8f7f3;
$color-bg-2: #eef0ef;
$color-bg-3: #f8f8f8;
$color-bg-4: #a29e9a;
$color-bg-5: #fafafa;
$color-bg-6: #eb646f;
$color-bg-7: #fbfaf8;
$color-border: #eee;
$color-border-2: #bebebe;
$color-border-3: #312d2c;
$color-border-4: #ebebeb;
$color-border-5: #faf6ef;
$color-border-6: #e0e0e0;

$color-text: #333;
$color-text-2: #7d7c7c;
$color-text-3: #969595;
$color-text-4: #b9b9b9;
$color-text-5: #353535;

$font-size: 15px;

/*============================================================================
  Fonts
==============================================================================*/
@font-face {
  font-family: 'gt_super_displaylight';
  src: url('GT-Super-Display-Light.eot');
  src: url('GT-Super-Display-Light.eot?#iefix') format('embedded-opentype'),
  url('GT-Super-Display-Light.woff2') format('woff2'),
  url('GT-Super-Display-Light.woff') format('woff'),
  url('GT-Super-Display-Light.ttf') format('truetype'),
  url('GT-Super-Display-Light.svg#GT-Super-Display-Light') format('svg');
  font-weight: normal;
  font-style: normal;
}

/*============================================================================
  Global
==============================================================================*/
* {
  outline-style: none;
}

body {
  color: $color-text;
  font-family: 'Heebo', sans-serif;
  background-color: $color-body-bg;

  &::before {
    content: "";
    visibility: hidden;
    opacity: 0;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    background-color: rgba(0,0,0,.3);
    transition: all 400ms cubic-bezier(0.29, 0.63, 0.44, 1);
  }

  &.hover {
    &::before {
      visibility: visible;
      opacity: 1;
    }
  }

  &.header-fixed {
    main {
      padding-top: 73px;
    }
  }

  &:not(.template-index){
    main {
      @media screen and (max-width: 1420px) {
        padding: 0 10px;
      }
    }
  }
}

a,
select,
input,
textarea,
button {
  outline-style: none !important;
}

a,
span {
  &:hover {
    text-decoration: underline;
  }

  &.nodecoration {
    text-decoration: none;

    &.withArrow {
      padding-right: 45px;
      background: url({{ 'icon-arrow-link.svg' | assets_url }}) no-repeat 100% 50%;
    }
  }
}

select {
  -webkit-appearance: none;
  -moz-appearance:    none;
  appearance:         none;

  &::-ms-expand {
    display: none;
  }
}

h1,
.h1 {
  color: $color-text;
  font-size: $font-size * 2;
  font-weight: 600;
  text-transform: uppercase;
  font-family: 'Jost', sans-serif;

  @media screen and (max-width: 1280px) {
    font-size: $font-size + 11;
  }

  @media screen and (max-width: 1024px) {
    font-size: $font-size + 8;
  }

  @media screen and (max-width: 768px) {
    font-size: $font-size + 6;
  }
}

h2,
.h2 {
  font-size: $font-size + 33 !important;
  font-weight: 300 !important;
  line-height: 1.1em;
  text-transform: none;
  font-family: 'gt_super_displaylight', sans-serif;
  margin-bottom: 20px;

  @media screen and (max-width: 1280px) {
    font-size: $font-size + 20 !important;
  }

  @media screen and (max-width: 736px) {
    font-size: $font-size + 16 !important;
  }
}

h3,
.h3 {
  font-size: $font-size;
  font-weight: 300;
  line-height: 1.1em;
  font-family: 'gt_super_displaylight', sans-serif;
  margin-bottom: 20px;
}

p {
  margin-bottom: 20px;

  a {
    color: $color-primary;
  }
}

li {
  a {
    color: $color-primary;
  }
}

svg {
  display: inline-block;
}

