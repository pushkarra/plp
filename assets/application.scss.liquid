/*================ Mobile Site Nav ================*/
.showMobileMenu {
  &::before {
    content: '';
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    background-color: rgba(0,0,0,.3);
  }

  .site-header {
    &::before {
      content: '';
      width: 100%;
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1;
      background-color: rgba(0,0,0,.3);
    }
    .site-header__body {
      .site-header__menu {
        display: none;
        width: 12px;
        height: 12px;
        position: fixed;
        top: 14px;
        left: 74%;
        z-index: 100001;
        color: $color-text-4;
        stroke: none;

