      }

      .site-header__logo {
        .site-header__logo__image {
          background: url({{ 'logo-black.svg?v=2_1' | assets_url }}) no-repeat 0 0;
          background-size: cover;
        }
      }

      .site-header__nav {
        & > ul {
          & > li {
            a {
              color: $color-text-5;
            }

            /*
            &:first-child {
              a {
                background: url({{ 'icon-gift-black.svg' | assets_url }}) no-repeat 0 0;
              }
            }
            */
          }
        }
      }

      .btn-transparent-white-round {
        color: $color-text-5;
        border-color: $color-text-5;
      }

      .site-header__search-icon,
