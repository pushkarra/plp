/*============================================================================
  Button
==============================================================================*/
.btn {
  display: inline-block;
  height: 42px;
  padding: 0 30px;
  cursor: pointer;
  font-size: $font-size - 5;
  font-weight: 400;
  line-height: 42px;
  text-align: center;
  text-decoration: none !important;
  text-transform: uppercase;
  font-family: 'Heebo', sans-serif;
  white-space: nowrap;
  transition: all 400ms cubic-bezier(0.29, 0.63, 0.44, 1);

  &.btn-primary {
    color: #fff;
    border: 1px solid $color-text;
    background: $color-text;

    svg,
    span {
      vertical-align: middle;
    }

    svg {
      color: #fff;
      width: 12px;
      height: 16px;
    }

    &:hover {
      color: #fff;
      border-color: $color-primary;
      background-color: $color-primary;
    }
  }

  &.btn-secondary {
    color: $color-text-2;
    border: 1px solid $color-text;
    background-color: #fff;
  }

  &.btn-third {
    color: #fff;
    border: 1px solid $color-bg-6;
    background-color: $color-bg-6;
  }

  &.btn-link {
    height: auto;
    padding: 0;
    line-height: 1.1em;
    text-transform: uppercase;
    text-decoration: underline;

    &.min {
      color: $color-secondary;
      font-size: $font-size;
    }

    @media screen and (max-width: 1023px) {
      font-size: 24px !important;
      line-height: 1.3em;
    }
    @media screen and (max-width: 736px) {
      font-size: 20px !important;
    }
    @media screen and (max-width: 568px) {
      font-size: 18px !important;
    }
  }

  &.btn-transparent {
    color: $color-text;
    font-size: $font-size - 5;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
    font-family: 'Heebo', sans-serif;
    border: 1px solid $color-text;

    &:hover {
      color: #fff;
      background-color: $color-text;
    }
  }

  &.btn-transparent-white {
    color: #fff;
    font-size: $font-size;
    border: 1px solid #fff;
    text-transform: none;

    &:hover {
      color: $color-text;
      background-color: #fff;
    }
  }

  &.btn-transparent-white-round {
    @extend .btn-transparent-white;

    position: relative;
    padding-left: 45px;
    border-radius: 20px;
    background: transparent;

    &.lgshop\:hidden { display: none !important; }

    svg {
      width: 15px;
      height: 15px;
      position: absolute;
      top: 13px;
      left: 23px;
    }

    @media screen and (max-width: 1280px) {
      height: auto;
      top: 17px;
      border: 0;
      margin: 0 !important;
      padding: 0;
      line-height: 1.5em;
      position: static;

      span {
        display: none;
      }

      &.hidden { display: none !important; }
      &.inline-block { display: inline-block !important; }

      svg {
        position: static;
      }
    }
  }

  &:disabled {
    color: $color-text !important;
    background-color: $color-bg-2 !important;
  }

  &.big {
    height: 52px;
    padding: 5px 30px;
  }
}

/*============================================================================
  Header
==============================================================================*/
#shopify-section-header {
  width: 100%;
  position: relative;
  z-index: 101;
}

.announcement-bar {
  padding: 7px 15px 5px;
  font-size: $font-size - 5;
  text-transform: uppercase;

  .phone {
    svg {
      display: inline-block;
      width: 10px;
      height: 10px;
      margin-right: 10px;
    }
  }

  .message {
    svg {
      display: inline-block;
      width: 10px;
      height: 10px;
      margin-left: 5px;
      margin-top: -3px;
      transform: rotate(-90deg);
    }
  }

  .announcement-bar__nav {
    ul {
      li {
        display: inline-block;
        margin-left: 10px;
      }
    }
  }
}

.site-header {
  width: 100%;
  position: fixed;
  top: 27px;
  left: 0;
  z-index: 101;
  transition: all 400ms cubic-bezier(0.29, 0.63, 0.44, 1);
  border-bottom: 1px solid rgba(255,255,255,.2);
  background-color: transparent;

  .site-header__body {
    padding: 10px 0;
    background-color: transparent;

    .site-header__menu {
      width: 18px;
      height: auto;
      color: #fff;
      stroke: #fff;
      margin-right: 20px;
      transition: all 400ms cubic-bezier(0.29, 0.63, 0.44, 1);
    }

    .site-header__logo {
      .site-header__logo__image {
        display: block;
        width: 90px;
        height: 50px;
        background: url({{ 'logo-black.svg?v=2' | assets_url }}) no-repeat 0 0;
        background-size: cover;
      }

      @media screen and (max-width: 1023px) {
        width: 70px;
        height: 30px;
      }

      @media screen and (max-width: 568px) {
        width: 119px;
        height: auto;
      }
    }

    .site-header__search {
      max-width: 658px;
      margin: 0 auto;
    }

    .site-header__search-icon {
      margin-left: 10px;

      svg {
        width: 16px;
        height: 16px;
        color: #fff;
      }

      @media screen and (max-width: 1280px) {
        margin-left: 5px;
      }
    }

    .site-header__account {
      margin-left: 10px;

      svg {
        width: 16px;
        height: 16px;
        color: #fff;
      }

      @media screen and (max-width: 1280px) {
        margin-left: 5px;
      }
    }

    .site-header__cart {
      display: inline-block;
      position: relative;
      margin-left: 10px;

      svg {
        width: 16px;
        height: 18px;
        margin-top: -1px;
        color: #fff;
      }

      a {
        .site-header__cart-count {
          width: 20px;
          height: 20px;
          position: absolute;
          top: -4px;
          right: -8px;
          color: #fff;
          font-size: $font-size - 4;
          font-weight: 600;
          line-height: 16px;
          text-align: center;
          font-family: 'Jost', sans-serif;
          -webkit-border-radius: 50%;
          -moz-border-radius: 50%;
          border-radius: 50%;
          border: 2px solid #fff;
          background-color: $color-secondary;

          span {
            display: inline-block;
            width: 100%;
            height: inherit;
            position: absolute;
            top: 0;
            left: 0;
          }
        }

        & > span {
          color: #fff;
          font-size: $font-size + 2;
          font-weight: 500;
          position: absolute;
          top: 11px;
          left: 100px;
        }
      }

      @media screen and (max-width: 1280px) {
        margin-left: 5px;
      }
    }

    .site-header__nav {
      display: inline-block;
      margin: 14px 0 -14px;

      & > ul {
        & > li {
          display: inline-block;
          margin: 0;

          a {
            color: #fff;
            font-size: $font-size - 1;
            display: inline-block;
            padding: 0 5px 30px;

            @media screen and (max-width: 1280px) {
              padding: 0 3px 26px;
            }
          }

          /*
          &:first-child {
            a {
              position: relative;
              padding-left: 24px;

              background: url({{ 'icon-gift.svg' | assets_url }}) no-repeat 0 0;
              background-size: 16px 16px;
            }
          }
		  */
          &.has-dropdown,
          &.has-megamenu {
            & > a {
              position: relative;
            }

            &.active {
              & > a {
                &::after {
                  content: "";
                  display: block;
                  position: absolute;
                  width: 0;
                  height: 0;
                }

                &::after {
                  bottom: 4px;
                  left: calc(50% - 4px);
                  border-left: 4px solid transparent;
                  border-right: 4px solid transparent;
                  border-bottom: 4px solid $color-border-2;
                }
              }
            }
          }

          &.has-dropdown {
            .site-nav__dropdown {
              display: none;
              width: 300px;
              padding: 45px;
              position: absolute;
              right: 0;
              top: 81px;
              border-top: 1px solid #ccc;
              background-color: #fff;

              &::before,
              &::after {
                content: "";
                display: block;
                position: absolute;
                width: 0;
                height: 0;
              }

              &::before {
                top: -12px;
                left: 259px;
                z-index: 2;
                border-left: 13px solid transparent;
                border-right: 13px solid transparent;
                border-bottom: 12px solid #fff;
              }

              &::after {
                top: -14px;
                left: 257px;
                z-index: 1;
                border-left: 15px solid transparent;
                border-right: 15px solid transparent;
                border-bottom: 14px solid $color-border-2;
              }

              ul {
                li {
                  margin-bottom: 25px;

                  &:last-child {
                    margin-bottom: 0;
                  }
                }
              }
            }

            &:hover {
              .site-nav__dropdown {
                display: block;
              }
            }
          }

          &.has-megamenu {
            .site-nav__dropdown-megamenu {
              visibility: hidden;
              opacity: 0;
              width: 99.1vw;
              padding: 60px 0;
              position: absolute;
              top: 73px;
              left: 0;
              text-align: left;
              border-top: 1px solid #ccc;
              background: #fff;
              transition: all 400ms cubic-bezier(0.29, 0.63, 0.44, 1);

              &#megamenu-1 {
                &::before {
                  left: 92px;
                }
                &::after {
                  left: 90px;
                }
              }

              ul {
                width: auto;
                height: 100%;

                & > li {
                  display: inline-block;
                  width: 16%;
                  height: 390px;
                  position: relative;
                  padding-left: 38px;
                  vertical-align: top;

                  a {
                    color: #353535;
                  }

                  &.megamenu-border {
                    border-left: 1px solid #eee;
                  }

                  &.megamenu-banner {
                    width: 32%;
                  }

                  &:first-child {
                    padding-left: 0;

                    &.megamenu-border {
                      border: 0;
                    }
                  }

                  &.brand-nav {
                    padding-top: 40px;

                    a {
                      display: inline-block;
                      width: 10px;
                      padding: 0;
                      text-align: center;
                    }
                  }

                  span {
                    display: inline-block;
                    min-height: 16px;
                    color: $color-text-2;
                    font-size: $font-size - 4;
                    text-transform: uppercase;
                    margin-bottom: 17px;
                  }

                  ul {
                    width: 100%;

                    li {
                      width: 100%;
                      height: auto;
                      padding: 0;
                      margin: 0 0 10px;

                      &:last-child { margin-bottom: 0 }

                      a {
                        font-size: $font-size - 2;
                        padding: 0;
                      }
                    }
                  }

                  .addition-link {
                    color: $color-primary;
                    font-size: $font-size - 2;
                    text-transform: uppercase;
                    position: absolute;
                    left: 40px;
                    bottom: 0;
                  }
                }
              }

              @media screen and (max-width: 1366px) {
                width: 100%;
                padding: 30px 15px;

                ul {
                  & > li {
                    padding-left: 20px;

                    .addition-link {
                      left: 20px;
                    }
                  }
                }
              }

              @media screen and (max-width: 1225px) {
                ul {
                  & > li {
                    ul {
                      li {
                        a {
                          font-size: $font-size - 4;
                        }
                      }
                    }
                  }
                }
              }

              @media screen and (max-width: 1023px) {
                display: none !important;
              }
            }

            &.active {
              svg {
                color: $color-secondary;
                stroke: $color-secondary;
              }

              .site-nav__dropdown-megamenu {
                visibility: visible;
                opacity: 1;
              }
            }
          }
        }
      }

      @media screen and (max-width: 1280px) {
        margin: 16px 0 0;
      }
    }

    .btn-transparent-white-round {
      margin-left: 30px;
    }

    @media screen and (max-width: 1023px) {
      padding: 14px 0;
    }
  }

  .site-header__bottom {
    padding: 5px 0;
    text-align: center;
    background-color: $color-primary;
    -webkit-box-shadow: inset 0 2px 3px 0 rgba(0, 0, 0, 0.14);
    -moz-box-shadow:    inset 0 2px 3px 0 rgba(0, 0, 0, 0.14);
    box-shadow:         inset 0 2px 3px 0 rgba(0, 0, 0, 0.14);

    p {
      color: #fff;
      font-size: $font-size - 2;
      font-weight: 600;
      text-transform: uppercase;
      font-family: 'Jost', sans-serif;
      margin: 0;

      .coupon {
        display: inline-block;
        padding: 3px 8px;
        border: 1px solid #fff;
        border-radius: 20px;
        cursor: pointer;
      }
    }
  }

  &.fixed {
    width: 100%;
    top: 0;
    left: 0;
    background-color: #fff;

    .site-header__body {
      width: 100%;
      -webkit-box-shadow: 0 2px 3px 0 rgba(0, 0, 0, 0.14);
