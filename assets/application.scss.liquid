/*============================================================================
  Returns & Exchanges
==============================================================================*/
#returns-exchanges-header {
  padding-top: 140px;
  border-bottom: 1px solid $color-border-6;

  h1 {
    font-size: $font-size + 33px;
    line-height: 1.1em;
    font-weight: 400;
    text-transform: none;
    font-family: 'gt_super_displaylight';

    @media screen and (max-width: 1200px) {
      font-size: $font-size + 20px;
    }
  }

  .horizontal__nav {
    margin: 100px 0 -1px;

    svg { display: none }

    li {
      display: inline-block;
      margin: 0 10px;
      padding-bottom: 20px;
      border-bottom: 2px solid transparent;

      a {
        color: $color-text;
        font-size: $font-size - 1;
      }

      &.main-menu--active {
        border-color: $color-text;
      }
    }
  }

  @media screen and (max-width: 1200px) {
    padding-top: 70px;

    .horizontal__nav {
      margin: 50px 0 -1px;
    }
  }

  @media screen and (max-width: 736px) {
    border-bottom: 0;
    position: relative;
    z-index: 1;

    .horizontal__nav {
      height: 42px;
      overflow: hidden;
      position: relative;
      transition: all 100ms linear;
      border-top: 1px solid $color-border-6;

      svg {
        display: inline-block;
        width: 10px;
        height: 6px;
        position: absolute;
        top: 18px;
        right: 10px;
        z-index: 3;
      }

      ul {
        display: grid;
        width: 100%;
        padding: 10px 15px;
        transition: all 100ms linear;

        li {
          display: none;
          order: 2;
          width: 100%;
          margin: 0;
          padding: 0;
          text-align: left;

          &.main-menu--active {
            display: grid;
            order: 1;
            border: 0;
          }
        }
      }

      &:hover {
        overflow: visible;

        svg {
          transform: rotate(-180deg);
        }

        ul {
          box-shadow: 0 1px 3px #00000024;
          background-color: $color-bg-3;

          li {
            display: grid;
            padding-bottom: 10px;

            &:last-child {
              padding-bottom: 0;
            }
          }
        }
      }
    }
  }
}

