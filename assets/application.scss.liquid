.slick-arrow {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 50%;
  z-index: 2;
  text-align: center;
  line-height: 28px;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  border: 1px solid #828282;
  background-color: transparent;

  &::before {
    content: '';
    display: block;
    position: absolute;
    top: 9px;
    left: 11px;
    width: 6px;
    height: 10px;
    opacity: .65;
    background: url({{ 'icon-arrow.svg?v=2' | assets_url }}) no-repeat;
    background-size: cover;
  }

  span {
    display: none;
  }

  &.slick-prev {
    left: -30px;

