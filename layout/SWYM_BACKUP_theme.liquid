  {%- assign templateHandle = request.page_type | handle -%}
  <body class="template-{{ templateHandle }} {{ page.template_suffix }} {% if template == 'search.shop' %} template-collection{% endif %}">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PXG5H3C"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "url": "https://www.bhfo.com/",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://www.bhfo.com/search?q={{ search.terms | escape }}",
        "query-input": "required name=search_term_string"
      }
    }
    </script>

    <!-- Impact -->
    <script type="text/javascript">
      ire('identify', {customerId: '{{ customer.id }}', customerEmail: '{{ customer.email | sha1 }}'});
    </script>
    <!-- End Impact -->

    {% section 'header' %}

    <main role="main" {% if templateHandle == 'captcha' %}class="mt-20"{% endif %}>
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    {{ 'lazysizes.js' | asset_url | script_tag }}
    {{ 'vendor.js' | asset_url | script_tag }}

    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    {{ 'app.js' | asset_url | script_tag }}
